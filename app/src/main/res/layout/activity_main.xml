<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/immagineconvertita"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/numeroConvertire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Inserire il valore."
        android:inputType="numberDecimal"
        android:textColorHighlight="#000000"
        android:textColorHint="#1C6488"
        android:textColorLink="#141414"
        android:textCursorDrawable="@android:color/background_dark"
        android:textStyle="normal|bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottoneConvertitore" />

    <Button
        android:id="@+id/bottoneConvertitore"
        android:layout_width="158dp"
        android:layout_height="324dp"
        android:layout_marginTop="57dp"
        android:alpha="0"
        android:onClick="convertiButton"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>